<!DOCTYPE html>
<html>
  <head>
    <title>Foodie</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<%= render '/layouts/nav' %>

    <% if params[:id] != nil %>
      <% @url = '/user/' + params[:id] %>
    <% end %>



    <span class="notice"><%= notice %></span>
    <span class="alert"><%= alert %></span>
    <div class="container">

    <%= yield %>
    </div>
  </body>
</html>
