<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :username %>
    <em>(Your displayed name)</em><br />
    <%= f.text_field :username,autofocus: true,placeholder: "Required",:required => true%>
  </div>  
  <br/>

  <div class="field">
    <%= f.label :email %>
    <em>(Your login ID)</em><br />

    <%= f.email_field :email,placeholder: "Required",:required => true%>
    
  </div>
  <br/>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off",placeholder: "Required",:required => true %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",:required => true %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
